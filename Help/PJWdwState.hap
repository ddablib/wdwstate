\par 
\par \plain\f1\fs18\cf1 \protect <KP 1>\plain\f1\fs18\cf2\b property\plain\f1\fs18\cf2  MinimizeDelay: Integer;\plain\f1\fs18\cf1 \protect </KP 1>\plain\f1\fs18\cf2 
\par \plain\f0\fs18\cf2 
